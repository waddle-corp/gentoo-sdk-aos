<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">
    <ImageButton
        android:id="@+id/gentooImageButton"
        android:layout_width="78dp"
        android:layout_height="80dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/gentoo_floating_button_description"
        android:scaleType="fitCenter"
        android:clickable="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/gentooDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/gentoo_chat_bubble"
        style="@style/GentooH4"
        android:textColor="#FFFFFF"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingStart="14dp"
        android:paddingEnd="14dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="4dp"
        android:visibility="gone"
        android:clickable="false"
        android:maxLines="2"
        android:maxWidth="250dp"
        android:ellipsize="end"
        app:layout_constraintEnd_toStartOf="@id/gentooImageButton"
        app:layout_constraintBottom_toBottomOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>
